transforms:
  - env
  - hostcredentials
  - secrets
config:
  credentials:
    $hostcredentials:
<% @puppet_servers.uniq.each do |server| -%>
    - http://<%= server %>:8020/v1/credentials
<% end -%>
  engine:           native
  engines:
    native:
      createUser: false
  plugins:
    disabled: []
    reboot:
      maxLifeCycle: '96 hours'
      allowTaskReboots: true
      rebootCommand: ['/usr/bin/sudo', '/sbin/reboot']
<% if @operatingsystem == 'Darwin' -%>
    # we probably don't need this!
    env:
      extra:
        TMPDIR: {$env: TMPDIR}
        SHELL: '/bin/bash'
        LANG: 'en_US.UTF-8'
        LC_ALL: 'en_US.UTF-8'
        XPC_FLAGS: '0x0'
        XPC_SERVICE_NAME: '0'
        PATH: "/usr/local/bin:/usr/bin:/bin:/usr/sbin:/sbin"
<% end -%>
  queueBaseUrl:     https://queue.taskcluster.net/v1
  worker:
    provisionerId:    releng-hardware
    workerType :      <%= @taskcluster_worker_type %>
    workerGroup:      <%= @taskcluster_worker_group %>
    workerId:         <%= @hostname %>
    pollingInterval:  10
    reclaimOffset:    120
    minimumReclaimDelay: 30
    concurrency: 1
  temporaryFolder:  /var/tmp/tc-worker-tmp
  webHookServer:
    # NOTE: stateless DNS won't work in a datacenter, but there's no better option yet.  It will at least start up.
    provider: stateless-dns
    serverIp:           127.0.0.1
    serverPort:         60000
    tlsCertificate:
      $secret:  project/taskcluster/taskcluster-worker/stateless-dns
      key:      certificate
    tlsKey:
      $secret:  project/taskcluster/taskcluster-worker/stateless-dns
      key:      tlsKey
    statelessDNSSecret:
      $secret:  project/taskcluster/taskcluster-worker/stateless-dns
      key:      secret
    statelessDNSDomain:
      $secret:  project/taskcluster/taskcluster-worker/stateless-dns
      key:      domain
    maxLifeCycle: 345600 # 96 hours
  minimumDiskSpace:   10000000  # 10 GB
  minimumMemory:      1000000   # 1 GB
  monitor:
    project: taskcluster-worker
    logLevel: info
